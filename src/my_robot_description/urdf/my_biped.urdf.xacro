<?xml version="1.0"?>
<robot name="my_biped" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Path to controllers yaml -->
  <xacro:arg name="controllers_yaml"
             default="$(find my_robot_description)/config/controllers.yaml"/>

  <!-- ================= -->
  <!-- Materials -->
  <!-- ================= -->
  <material name="red"><color rgba="0.8 0.1 0.1 1"/></material>
  <material name="green"><color rgba="0.2 0.8 0.2 1"/></material>
  <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>

  <!-- ================= -->
  <!-- Inertia macro -->
  <!-- ================= -->
  <xacro:macro name="box_inertia" params="m x y z">
    <inertial>
      <mass value="${m}"/>
      <inertia
        ixx="${m*(y*y+z*z)/12}"
        iyy="${m*(x*x+z*z)/12}"
        izz="${m*(x*x+y*y)/12}"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </xacro:macro>

  <!-- ================= -->
  <!-- BASE (ROOT) -->
  <!-- ================= -->
  <link name="base_link">
    <xacro:box_inertia m="6.0" x="0.12" y="0.22" z="0.12"/>

    <visual>
      <geometry><box size="0.12 0.22 0.12"/></geometry>
      <material name="red"/>
    </visual>

    <collision>
      <geometry><box size="0.12 0.22 0.12"/></geometry>
    </collision>
  </link>

  <gazebo reference="base_link"><material>Gazebo/Red</material></gazebo>

  <!-- ================= -->
  <!-- LEG MACRO -->
  <!-- ================= -->
  <xacro:macro name="leg" params="side y">

    <!-- THIGH -->
    <link name="${side}_thigh">
      <xacro:box_inertia m="1.5" x="0.05" y="0.05" z="0.25"/>

      <visual>
        <origin xyz="0 0 -0.125"/>
        <geometry><box size="0.05 0.05 0.25"/></geometry>
        <material name="green"/>
      </visual>

      <collision>
        <origin xyz="0 0 -0.125"/>
        <geometry><box size="0.05 0.05 0.25"/></geometry>
      </collision>
    </link>

    <joint name="${side}_hip" type="revolute">
      <parent link="base_link"/>
      <child link="${side}_thigh"/>
      <origin xyz="0 ${y} 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.0" upper="1.0" effort="40" velocity="3"/>
      <dynamics damping="2.0" friction="0.5"/>
    </joint>

    <!-- SHIN -->
    <link name="${side}_shin">
      <xacro:box_inertia m="1.0" x="0.045" y="0.045" z="0.25"/>

      <visual>
        <origin xyz="0 0 -0.125"/>
        <geometry><box size="0.045 0.045 0.25"/></geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin xyz="0 0 -0.125"/>
        <geometry><box size="0.045 0.045 0.25"/></geometry>
      </collision>
    </link>

    <joint name="${side}_knee" type="revolute">
      <parent link="${side}_thigh"/>
      <child link="${side}_shin"/>
      <origin xyz="0 0 -0.25"/>
      <axis xyz="0 1 0"/>
      <limit lower="0.0" upper="2.2" effort="40" velocity="3"/>
      <dynamics damping="3.0" friction="0.8"/>
    </joint>

    <!-- FOOT -->
    <link name="${side}_foot">
      <xacro:box_inertia m="0.8" x="0.12" y="0.08" z="0.04"/>

      <visual>
        <origin xyz="0 0 -0.02"/>
        <geometry><box size="0.12 0.08 0.04"/></geometry>
        <material name="gray"/>
      </visual>

      <collision>
        <origin xyz="0 0 -0.02"/>
        <geometry><box size="0.12 0.08 0.04"/></geometry>
      </collision>
    </link>

    <joint name="${side}_ankle" type="revolute">
      <parent link="${side}_shin"/>
      <child link="${side}_foot"/>
      <origin xyz="0.04 0 -0.25"/>
      <axis xyz="0 1 0"/>
      <limit lower="-0.6" upper="0.6" effort="30" velocity="3"/>
      <dynamics damping="1.5" friction="0.4"/>
    </joint>

    <!-- Gazebo colors -->
    <gazebo reference="${side}_thigh"><material>Gazebo/Green</material></gazebo>
    <gazebo reference="${side}_shin"><material>Gazebo/Blue</material></gazebo>
    <gazebo reference="${side}_foot"><material>Gazebo/Grey</material></gazebo>

    <!-- FOOT CONTACT -->
    <gazebo reference="${side}_foot">
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
      <kp>80000</kp>
      <kd>150</kd>
    </gazebo>

  </xacro:macro>

  <!-- ================= -->
  <!-- LEGS -->
  <!-- ================= -->
  <xacro:leg side="left"  y="0.06"/>
  <xacro:leg side="right" y="-0.06"/>

  <!-- =============================== -->
  <!-- ROS 2 CONTROL SYSTEM -->
  <!-- =============================== -->
  <ros2_control name="my_biped" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="left_hip">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="left_knee">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="left_ankle">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_hip">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_knee">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_ankle">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>


    <!-- =============================== -->
  <!-- Gazebo Classic ros2_control -->
  <!-- =============================== -->
  <gazebo>
  <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
    <parameters>$(find my_robot_description)/config/controllers.yaml</parameters>
  </plugin>
</gazebo>


</robot>

