<?xml version="1.0"?>
<robot name="my_biped" xmlns:xacro="http://www.ros.org/wiki/xacro">


<xacro:arg name="controllers_yaml" default=""/>

<material name="red">
  <color rgba="0.8 0.1 0.1 1"/>
</material>

<material name="green">
  <color rgba="0.2 0.8 0.2 1"/>
</material>

<material name="blue">
  <color rgba="0.2 0.2 0.8 1"/>
</material>

<material name="gray">
  <color rgba="0.6 0.6 0.6 1"/>
</material>


<!-- ================= -->
<!-- Inertia macro -->
<!-- ================= -->
<xacro:macro name="box_inertia" params="m x y z">
  <inertial>
    <mass value="${m}"/>
    <inertia
      ixx="${m*(y*y+z*z)/12}"
      iyy="${m*(x*x+z*z)/12}"
      izz="${m*(x*x+y*y)/12}"
      ixy="0" ixz="0" iyz="0"/>
  </inertial>
</xacro:macro>

<!-- ================= -->
<!-- BASE (ROOT) -->
<!-- ================= -->
<link name="base_link">

  <xacro:box_inertia m="6.0" x="0.3" y="0.2" z="0.1"/>

  <visual>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <geometry>
      <box size="0.3 0.2 0.1"/>
    </geometry>
    <material name="red"/>
  </visual>

  <collision>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <geometry>
      <box size="0.3 0.2 0.1"/>
    </geometry>
  </collision>

</link>

<gazebo reference="base_link">
  <material>Gazebo/Red</material>
</gazebo>


<!-- ================= -->
<!-- LEG MACRO -->
<!-- ================= -->
<xacro:macro name="leg" params="side y">

  <!-- THIGH -->
  <link name="${side}_thigh">

    <xacro:box_inertia m="1.5" x="0.05" y="0.05" z="0.25"/>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
      <material name="green"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.25"/>
      </geometry>
    </collision>

  </link>

  <joint name="${side}_hip" type="revolute">
    <parent link="base_link"/>
    <child link="${side}_thigh"/>
    <origin xyz="0.05 ${y} -0.05"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0" upper="1.0" effort="40" velocity="4"/>
    <dynamics damping="10" friction="3"/>
  </joint>

  <!-- SHIN -->
  <link name="${side}_shin">

    <xacro:box_inertia m="1.0" x="0.04" y="0.04" z="0.25"/>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.25"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.04 0.04 0.25"/>
      </geometry>
    </collision>

  </link>

  <joint name="${side}_knee" type="revolute">
    <parent link="${side}_thigh"/>
    <child link="${side}_shin"/>
    <origin xyz="0 0 -0.25"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.0" upper="2.2" effort="40" velocity="4"/>
    <dynamics damping="10" friction="3"/>
  </joint>

  <gazebo reference="left_thigh">
  <material>Gazebo/Green</material>
</gazebo>

<gazebo reference="right_thigh">
  <material>Gazebo/Green</material>
</gazebo>


  <!-- FOOT -->
  <link name="${side}_foot">

    <xacro:box_inertia m="0.8" x="0.08" y="0.12" z="0.04"/>

    <visual>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.12 0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>

    <collision>
      <origin xyz="0 0 -0.02" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.12 0.04"/>
      </geometry>
    </collision>

  </link>

  <joint name="${side}_ankle" type="revolute">
    <parent link="${side}_shin"/>
    <child link="${side}_foot"/>
    <origin xyz="0 0 -0.25"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.6" upper="0.6" effort="30" velocity="4"/>
    <dynamics damping="10" friction="3"/>
  </joint>

  <gazebo reference="left_shin">
  <material>Gazebo/Blue</material>
</gazebo>

<gazebo reference="right_shin">
  <material>Gazebo/Blue</material>
</gazebo>

<gazebo reference="left_foot">
  <material>Gazebo/Grey</material>
</gazebo>

<gazebo reference="right_foot">
  <material>Gazebo/Grey</material>
</gazebo>



</xacro:macro>

<!-- ================= -->
<!-- LEGS -->
<!-- ================= -->
<xacro:leg side="left"  y="0.06"/>
<xacro:leg side="right" y="-0.06"/>


  <!-- =============================== -->
  <!-- ROS 2 CONTROL SYSTEM -->
  <!-- =============================== -->
  <ros2_control name="my_biped" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>

    <joint name="left_hip">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="left_knee">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="left_ankle">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_hip">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_knee">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="right_ankle">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

  </ros2_control>


    <!-- =============================== -->
  <!-- Gazebo Classic ros2_control -->
  <!-- =============================== -->
  <gazebo>
  <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
    <parameters>$(find my_robot_description)/config/controllers.yaml</parameters>
  </plugin>
</gazebo>





</robot>

